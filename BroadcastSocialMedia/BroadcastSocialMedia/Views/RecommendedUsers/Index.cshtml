@model RecommendedUsersIndexViewModel

@{
    ViewData["Title"] = "Recommended Users";
}

<div class="viewsContainer">

@if (Model != null)
{

    <h2>We recommend you to follow these users</h2>
    @for (int i = 0; i < 3 && i < Model.RecommendedUsers.Count; i++)
    {

        <p>
            <b>
                @Model.RecommendedUsers[i].Name
            </b>
        </p>


        @if (@Model.RecommendedUsers[i].ProfileImageFilenameGUID != "")
        {
            <img class="profilePictureSmall" src="~/images/profilePictures/@Model.RecommendedUsers[i].ProfileImageFilenameGUID" alt="Your Profile Image">
        }


        
    }
}

</div>